<mvc:View controllerName="SS.SigniwisSports1.controller.View1" xmlns:tnt="sap.tnt" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<!-- <Shell id="shell"> -->
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}" showHeader="false">
					<content>
                    <tnt:ToolHeader >
						<Bar>
							<contentLeft width="3rem">
								<Image src="{empData>/logo/0/image}" alt="LOGO" height="3rem"/>
							</contentLeft>
							<contentMiddle>
								<Title text="{i18n>SigniwisSports}" titleStyle="H2"/>
							</contentMiddle>
						
						</Bar>
					</tnt:ToolHeader>
                     <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
					    <items>
					     <Input id="userId" placeholder="User ID"></Input>
					     <Input id="userName" placeholder="Password" type="Password"></Input>
					     <Button width="12rem" text="Login" type="Emphasized" press="onLogin"></Button>
					    </items>
					   </VBox>
                    
                    
                    </content>
				</Page>
			</pages>
		</App>
	<!-- </Shell> -->
</mvc:View>
